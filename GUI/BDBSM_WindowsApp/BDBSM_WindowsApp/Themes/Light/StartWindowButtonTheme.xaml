<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:BDBSM_WindowsApp.Themes">
    <Style TargetType="Button" x:Key="StartWindowButtonTheme" x:Name="StartWindowButton" BasedOn="{StaticResource MaterialDesignRaisedLightButton}">
        <Style.Setters>
            <Setter Property="Width" Value="165" />
            <Setter Property="Height" Value="200" />
            <Setter Property="VerticalAlignment" Value="Top"/>
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="Margin" Value="10,10,10,10" />
            <Setter Property="Background" Value="#FFFFFF" />
            <Setter Property="Foreground" Value="#14274e" />
            <Setter Property="BorderThickness" Value="0.5" />
        </Style.Setters>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Cursor" Value="Hand" />
                <Setter Property="BorderBrush" Value="#14274e" />
            </Trigger>
            <Trigger Property="IsFocused" Value="True">
                <Setter Property="Background" Value="#394867" />
                <Setter Property="Foreground" Value="#FFFFFF" />

            </Trigger>
        </Style.Triggers>
    </Style>
</ResourceDictionary>