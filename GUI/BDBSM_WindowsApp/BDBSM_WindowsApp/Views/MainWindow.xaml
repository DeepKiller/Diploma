<Window x:Class="BDBSM_WindowsApp.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BDBSM_WindowsApp"
        mc:Ignorable="d"
        Title="BDBSM Studio" Height="450" Width="800"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="35" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="350"/>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Grid x:Name="QuickAccessBar" Grid.Row="0" Grid.ColumnSpan="2" 
              Background="#14274e"
              MouseDown="QuickAccessBar_MouseDown"
              MouseUp="QuickAccessBar_MouseUp">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="30"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="name.bdb" 
                       Foreground="White"
                       Grid.Column="6"
                       
                       FontSize="20"
                       FontFamily="/Fonts/#Rubik"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       TextAlignment="Center"
                       FontWeight="Light"
                       />

            <Button  x:Name="ButtonSave" Click="ButtonSave_Click"
                     Style="{StaticResource QuickAccessBarButtonTheme}"
                     Grid.Column="2">
                <Button.Content>
                    <Image RenderOptions.BitmapScalingMode="HighQuality"
                        Source="/Images/Icons/SaveDB.png" Height="20"/>
                </Button.Content>
            </Button>

            <Button  x:Name="ButtonUndo"
                     Style="{StaticResource QuickAccessBarButtonTheme}"
                     Grid.Column="3">
                <Button.Content>
                    ↩
                </Button.Content>
            </Button>

            <Button  x:Name="ButtonReturn" 
                     Style="{StaticResource QuickAccessBarButtonTheme}"
                     Grid.Column="4">
                <Button.Content>
                    ↪
                </Button.Content>
            </Button>

            <Button  x:Name="ButtonHelp" Click="ButtonHelp_Click" 
                     Style="{StaticResource WindowControlButtonTheme}"
                     Grid.Column="8"
                     VerticalContentAlignment="Center"
                     HorizontalContentAlignment="Center"
                     FontSize="14">
                <Button.Content>
                    ?
                </Button.Content>
            </Button>

            <Button  x:Name="ButtonRollUp" Click="ButtonRollUp_Click"
                     Style="{StaticResource WindowControlButtonTheme}"
                     Grid.Column="9"
                     VerticalContentAlignment="Center"
                     HorizontalContentAlignment="Center"
                     FontSize="14">
                <Button.Content>
                    –
                </Button.Content>
            </Button>

            <Button  x:Name="ButtonExpand" Click="ButtonExpand_Click"
                     Style="{StaticResource WindowControlButtonTheme}"
                     Grid.Column="10"
                     VerticalContentAlignment="Center"
                     HorizontalContentAlignment="Center"
                     FontSize="14">
                <Button.Content>
                    ▢
                </Button.Content>
            </Button>

            <Button x:Name="ButtonClose" Click="ButtonClose_Click"
                    Style="{StaticResource WindowControlButtonTheme}"
                    Grid.Column="11"
                    VerticalContentAlignment="Center"
                    HorizontalContentAlignment="Center"
                    FontSize="14">
                <Button.Content>
                    ×
                </Button.Content>
            </Button>
        </Grid>
        <Grid x:Name="MenuBar" Grid.Row="1" Background="#394867"  Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="13.5"/>
                <ColumnDefinition Width="86.5"/>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition Width="80"/>
                <ColumnDefinition Width="19.5"/>
                <ColumnDefinition Width="15.5"/>
            </Grid.ColumnDefinitions>

            <Button x:Name="ButtonFile"
                    Grid.Column="0"
                    Content="Файл" Style="{StaticResource MenuBarTheme}" Grid.ColumnSpan="2"/>

            <Button x:Name="ButtonCreateTable" Click="ButtonCreateTable_Click"
                    Grid.Column="2"
                    Button.Content="Создать таблицу" Style="{StaticResource MenuBarTheme}"/>

            <Image Width="35" HorizontalAlignment="Right"
                    Grid.Column="9" Grid.ColumnSpan="2" />
        </Grid>

        <Grid x:Name="NavigationArea" Grid.Row="2" Background="#9ba4b4">
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="25"/>
                <RowDefinition />
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Text="DatabaseName"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center" Margin="10" Height="20" Width="330" />

            <TextBox Grid.Row="1" Text="Search..." Height="25" TextAlignment="Left"
                     VerticalAlignment="Bottom" Margin="1,0,0,0"/>
            <TreeView x:Name="TreeViewTables" Margin="1,0,0,0" Grid.Row="2">
                <TreeView.ItemTemplate>
                    <HierarchicalDataTemplate ItemsSource="{Binding _tables}">
                        
                    </HierarchicalDataTemplate>
                </TreeView.ItemTemplate>
                <TreeView.ContextMenu>
                    <ContextMenu>
                        <MenuItem>
                            <MenuItem.Header>
                                Создать таблицу
                            </MenuItem.Header>
                        </MenuItem>
                        <MenuItem>
                            <MenuItem.Header>
                                Добавить таблицу из файла
                            </MenuItem.Header>
                        </MenuItem>
                    </ContextMenu>
                </TreeView.ContextMenu>
            </TreeView>
        </Grid>
        <Grid x:Name="Workspace" Grid.Row="2" Grid.Column="1" 
              Margin="0" Background="#f1f6f9">
            <TabControl>
                <TabItem Header="TableName">

                </TabItem>
            </TabControl>
        </Grid>

    </Grid>
</Window>
