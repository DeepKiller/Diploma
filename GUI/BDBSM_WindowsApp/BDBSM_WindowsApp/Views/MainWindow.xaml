<Window x:Class="BDBSM_WindowsApp.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BDBSM_WindowsApp"
        mc:Ignorable="d"
        Title="BDBSM Studio" Height="450" Width="800"
        WindowStyle="None"
        ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25" />
            <RowDefinition Height="35" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="350"/>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Grid x:Name="QuickAccessBar" Background="#14274e" Grid.ColumnSpan="2"
              MouseDown="QuickAccessBar_MouseDown"
              MouseUp="QuickAccessBar_MouseUp">

            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition Width="25"/>
                <ColumnDefinition Width="25"/>
                <ColumnDefinition Width="25"/>
                <ColumnDefinition Width="25"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="name.bdb" 
                       Foreground="White"
                       Grid.Column="4"
                       
                       FontSize="20"
                       FontFamily="/Fonts/#Rubik"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       TextAlignment="Center"
                       FontWeight="Light"
                       />

            <Button  x:Name="ButtonHelp" Click="ButtonHelp_Click">
                <Grid.Column>8</Grid.Column>
            </Button>

            <Button  x:Name="ButtonRollUp" Click="ButtonRollUp_Click">
                <Grid.Column>9</Grid.Column>
            </Button>

            <Button  x:Name="ButtonExpand" Click="ButtonExpand_Click">
                <Grid.Column>10</Grid.Column>
            </Button>

            <Button x:Name="ButtonClose" Click="ButtonClose_Click">
                <Grid.Column>11</Grid.Column>
            </Button>
        </Grid>
        <Grid x:Name="MenuBar" Background="#394867" Grid.Row="1" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition Width="80"/>
                <ColumnDefinition Width="35"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="ButtonFile">
                <Grid.Column>0</Grid.Column>
                <Button.Content>File</Button.Content>
            </Button>
            <Button x:Name="ButtonCreate">
                <Grid.Column>1</Grid.Column>
                <Button.Content>Create</Button.Content>
            </Button>
            <TextBlock x:Name="TextBlockAccount" 
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center">
                <TextBlock.Text>Sign In</TextBlock.Text>
                <Grid.Column>7</Grid.Column>
            </TextBlock>
            <Image Width="35" HorizontalAlignment="Right">
                <Grid.Column>8</Grid.Column>
            </Image>
        </Grid>
        <Grid x:Name="NavigationArea" Grid.Row="2" Background="#9ba4b4">
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="25"/>
                <RowDefinition />
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" Text="Database Name"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center" Margin="10" Height="20" Width="330" />

            <TextBox Grid.Row="1" Text="Search..." Height="25" TextAlignment="Left"
                     VerticalAlignment="Bottom" Margin="1,0,0,0"/>
            <TreeView Margin="1,0,0,0" Grid.Row="2" />
        </Grid>
        <Grid x:Name="Workspace" Grid.Row="2" Grid.Column="1" 
              Margin="0,4" Background="#f1f6f9"/>
    </Grid>
</Window>
